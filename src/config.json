{
    /* === API 配置模块 === */
    /* 用于远程监控和控制 */
    "api": {
        "id": null,              /* API 访问标识符 */
        "worker-id": null        /* 矿工ID，用于区分不同矿机 */
    },

    /* === HTTP 服务模块 === */
    /* 内置Web服务器，提供监控界面 */
    "http": {
        "enabled": false,        /* 是否启用HTTP服务 */
        "host": "127.0.0.1",     /* 监听地址，127.0.0.1表示仅本地访问 */
        "port": 0,               /* 端口，0表示随机端口 */
        "access-token": null,    /* 访问令牌，用于安全验证 */
        "restricted": true       /* 是否限制访问 */
    },

    /* === 通用配置模块 === */
    "autosave": true,            /* 自动保存配置更改 */
    "background": false,         /* 后台运行模式 */
    "colors": true,              /* 控制台彩色输出 */
    "title": true,               /* 显示标题栏 */

    /* === RandomX 算法模块 === */
    /* RandomX挖矿算法的配置 */
    "randomx": {
        "init": -1,                      /* 数据集初始化线程数，-1=自动 */
        "init-avx2": -1,                 /* AVX2初始化线程数 */
        "mode": "auto",                  /* 算法模式：auto/fast/light */
        "1gb-pages": false,              /* 使用1GB大页内存（需内核支持） */
        "rdmsr": true,                   /* 允许读取CPU MSR寄存器 */
        "wrmsr": true,                   /* 允许写入CPU MSR寄存器（优化性能） */
        "cache_qos": false,              /* 缓存服务质量控制 */
        "numa": true,                    /* NUMA感知（多CPU系统优化） */
        "scratchpad_prefetch_mode": 1    /* 缓存预取模式 */
    },

    /* === CPU 挖矿模块 === */
    "cpu": {
        "enabled": true,         /* 启用CPU挖矿 */
        "huge-pages": true,      /* 使用大页内存提升性能 */
        "huge-pages-jit": false, /* JIT编译使用大页 */
        "hw-aes": null,          /* 硬件AES加速，null=自动检测 */
        "priority": null,        /* 进程优先级，null=默认 */
        "memory-pool": false,    /* 内存池优化 */
        "yield": true,           /* 在空闲时让出CPU */
        "max-threads-hint": 100, /* 最大线程使用率百分比 */
        "asm": true,             /* 启用汇编优化 */
        "argon2-impl": null,     /* Argon2算法实现选择 */
        "cn/0": false,           /* CryptoNight算法支持 */
        "cn-lite/0": false       /* CryptoNight-Lite算法支持 */
    },

    /* === OpenCL GPU 挖矿模块 === */
    "opencl": {
        "enabled": false,        /* 启用OpenCL（AMD显卡） */
        "cache": true,           /* 启用内核缓存 */
        "loader": null,          /* OpenCL库加载器路径 */
        "platform": "AMD",       /* 选择OpenCL平台 */
        "adl": true,             /* 启用ADL监控（AMD显卡状态） */
        "cn/0": false,           /* CryptoNight算法支持 */
        "cn-lite/0": false       /* CryptoNight-Lite算法支持 */
    },

    /* === CUDA GPU 挖矿模块 === */
    "cuda": {
        "enabled": false,        /* 启用CUDA（NVIDIA显卡） */
        "loader": null,          /* CUDA库加载器路径 */
        "nvml": true,            /* 启用NVML监控（NVIDIA显卡状态） */
        "cn/0": false,           /* CryptoNight算法支持 */
        "cn-lite/0": false       /* CryptoNight-Lite算法支持 */
    },


    "log-file": null,            /* 日志文件路径，null=输出到控制台 */

    /* === 矿池配置模块 === */
    /* 配置连接的挖矿矿池，至少需要一个 */
    "pools": [
        {
            "algo": null,               /* 挖矿算法，null=自动 */
            "coin": null,               /* 货币类型，null=自动 */
            "url": "pool.example.com:3333",  /* 矿池地址和端口 */
            "user": "YOUR_WALLET_ADDRESS",   /* 你的钱包地址 */
            "pass": "x",                /* 矿工密码，通常为"x" */
            "rig-id": null,             /* 矿机标识符 */
            "nicehash": false,          /* 是否使用NiceHash协议 */
            "keepalive": false,         /* 保持连接活跃 */
            "enabled": true,            /* 启用此矿池 */
            "tls": false,               /* 使用TLS加密连接 */
            "tls-fingerprint": null,    /* TLS证书指纹验证 */
            "daemon": false,            /* 是否连接到本地守护进程 */
            "socks5": null,             /* SOCKS5代理地址 */
            "self-select": null,        /* 自选作业服务器 */
            "submit-to-origin": false   /* 提交到原始矿池 */
        }
    ],

    /* === 运行时配置模块 === */
    "print-time": 60,            /* 状态打印间隔（秒） */
    "health-print-time": 60,     /* 健康状态打印间隔（秒） */
    "dmi": true,                 /* 启用DMI硬件信息读取 */
    "retries": 5,                /* 连接重试次数 */
    "retry-pause": 5,            /* 重试间隔（秒） */
    "syslog": false,             /* 使用系统日志（Linux） */

    /* === TLS 加密模块 === */
    "tls": {
        "enabled": false,        /* 启用TLS加密 */
        "protocols": null,       /* TLS协议版本 */
        "cert": null,            /* 客户端证书 */
        "cert_key": null,        /* 客户端证书密钥 */
        "ciphers": null,         /* 加密套件 */
        "ciphersuites": null,    /* 加密套件（TLS 1.3） */
        "dhparam": null          /* DH参数 */
    },

    /* === DNS 解析模块 === */
    "dns": {
        "ip_version": 0,         /* IP版本：0=自动，4=IPv4，6=IPv6 */
        "ttl": 30                /* DNS缓存时间（秒） */
    },

    /* === 其他配置模块 === */
    "user-agent": null,          /* 自定义User-Agent */
    "verbose": 0,                /* 详细日志级别，0=正常，1=详细 */
    "watch": true,               /* 监视配置文件变化 */
    "pause-on-battery": false,   /* 使用电池时暂停挖矿 */
    "pause-on-active": false     /* 系统活跃时暂停挖矿 */
}
